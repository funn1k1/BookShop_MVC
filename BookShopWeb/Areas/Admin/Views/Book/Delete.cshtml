@model Book

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>
        <input asp-for="Id" hidden />
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6 text-start">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}