@model OrderViewModel

<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Order Books</span>
            <span class="badge badge-secondary badge-pill">3</span>
        </h4>

        <ul class="list-group mb-3">
            @foreach (var orderDetail in Model.OrderDetails)
            {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@orderDetail.Book.Title</h6>
                        <span class="text-muted d-block">@orderDetail.Book.Category.Name</span>
                        <span class="text-muted d-block">X@(orderDetail.Quantity)</span>
                    </div>
                    <span class="text-muted">@orderDetail.Book.ListPrice.ToString("c")</span>
                </li>
            }

            <li class="list-group-item d-flex justify-content-between">
                <span>Total (USD)</span>
                <strong>@Model.OrderHeader.OrderTotal.ToString("c")</strong>
            </li>
        </ul>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-success btn-block w-100">Pay Now</a>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-info btn-block w-100">Start Processing</a>
        </div>
        
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-dark btn-block w-100">Ship Order</a>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-warning btn-block">Cancel Order</a>
        </div>
    </div>
    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Order Details</h4>
        <form method="post">
            <input asp-for="OrderHeader.ApplicationUserId" hidden />
            <div class="mb-3">
                <label asp-for="OrderHeader.FullName"></label>
                @if (User.IsInRole(Roles.Admin))
                {
                    <input asp-for="OrderHeader.FullName" class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.FullName)">
                }
                else
                {
                    <input asp-for="OrderHeader.FullName" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.FullName)">

                }
                <span asp-validation-for="OrderHeader.FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.PhoneNumber"></label>
                @if (User.IsInRole(Roles.Admin))
                {
                    <input asp-for="OrderHeader.PhoneNumber" class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.PhoneNumber)">
                }
                else
                {
                    <input asp-for="OrderHeader.PhoneNumber" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.PhoneNumber)">
                }
                <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.Country"></label>
                @if (User.IsInRole(Roles.Admin))
                {
                    <input asp-for="OrderHeader.Country" class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.Country)">
                }
                else
                {
                    <input asp-for="OrderHeader.Country" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.Country)">
                }
                <span asp-validation-for="OrderHeader.Country" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.City"></label>
                @if (User.IsInRole(Roles.Admin))
                {
                    <input asp-for="OrderHeader.City" class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.City)">
                }
                else
                {
                    <input asp-for="OrderHeader.City" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.City)">
                }
                <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.Address"></label>
                @if (User.IsInRole(Roles.Admin))
                {
                    <input asp-for="OrderHeader.Address" class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.Address)">
                }
                else
                {
                    <input asp-for="OrderHeader.Address" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.Address)">
                }
                <span asp-validation-for="OrderHeader.Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.PostalCode"></label>
                @if (User.IsInRole(Roles.Admin))
                {
                    <input asp-for="OrderHeader.PostalCode" class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.PostalCode)">
                }
                else
                {
                    <input asp-for="OrderHeader.PostalCode" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.PostalCode)">
                }
                <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.ApplicationUser.Email"></label>
                @if (User.IsInRole(Roles.Admin))
                {
                    <input asp-for="OrderHeader.ApplicationUser.Email" class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.ApplicationUser.Email)">
                }
                else
                {
                    <input asp-for="OrderHeader.ApplicationUser.Email" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.ApplicationUser.Email)">
                }
                <span asp-validation-for="OrderHeader.ApplicationUser.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.Carrier"></label>
                @if (User.IsInRole(Roles.Admin))
                {
                    <input asp-for="OrderHeader.Carrier" class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.Carrier)">
                }
                else
                {
                    <input asp-for="OrderHeader.Carrier" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.Carrier)">
                }
                <span asp-validation-for="OrderHeader.Carrier" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.TrackingNumber"></label>
                @if (User.IsInRole(Roles.Admin))
                {
                    <input asp-for="OrderHeader.TrackingNumber" class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.TrackingNumber)">
                }
                else
                {
                    <input asp-for="OrderHeader.TrackingNumber" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.TrackingNumber)">
                }
                <span asp-validation-for="OrderHeader.TrackingNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.ShippingDate"></label>
                @if (User.IsInRole(Roles.Admin))
                {
                    <input asp-for="OrderHeader.ShippingDate" class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.ShippingDate)">
                }
                else
                {
                    <input asp-for="OrderHeader.ShippingDate" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.ShippingDate)">
                }
                <span asp-validation-for="OrderHeader.ShippingDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.OrderStatus"></label>
                <input asp-for="OrderHeader.OrderStatus" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.OrderStatus)">
                <span asp-validation-for="OrderHeader.OrderStatus" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.OrderDate"></label>
                <input asp-for="OrderHeader.OrderDate" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.OrderDate)">
                <span asp-validation-for="OrderHeader.OrderDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.OrderTotal"></label>
                <input asp-for="OrderHeader.OrderTotal" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.OrderTotal)">
                <span asp-validation-for="OrderHeader.OrderTotal" class="text-danger"></span>
            </div>

            @if (User.IsInRole(Roles.Admin))
            {
                <div class="mb-3">
                    <label asp-for="OrderHeader.SessionId"></label>
                    <input asp-for="OrderHeader.SessionId" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.SessionId)">
                    <span asp-validation-for="OrderHeader.SessionId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="OrderHeader.PaymentIntentId"></label>
                    <input asp-for="OrderHeader.PaymentIntentId" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.PaymentIntentId)">
                    <span asp-validation-for="OrderHeader.PaymentIntentId" class="text-danger"></span>
                </div>
            }

            <div class="mb-3">
                <label asp-for="OrderHeader.PaymentStatus"></label>
                <input asp-for="OrderHeader.PaymentStatus" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.PaymentStatus)">
                <span asp-validation-for="OrderHeader.PaymentStatus" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OrderHeader.PaymentDate"></label>
                <input asp-for="OrderHeader.PaymentDate" disabled class="form-control" placeholder="@Html.DisplayNameFor(c => c.OrderHeader.PaymentDate)">
                <span asp-validation-for="OrderHeader.PaymentDate" class="text-danger"></span>
            </div>

            <hr class="mb-4">

            <button class="btn btn-primary btn-block" type="submit">Update Order Details</button>
        </form>
    </div>
</div>
